{
  "name": "@repo/shared",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "license": "ISC",
  "scripts": {
    "dev": "pnpm build --watch",
    "build": "tsc -b -v",
    "postbuild": "tsc-alias",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js"
    }
  },
  "devDependencies": {
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}
